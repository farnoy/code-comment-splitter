{
  "name": "@farnoy/jj-comment-splitter",
  "exports": "./src/cli/jj-merge-tool.ts",
  "version": "0.2.1",
  "imports": {
    "@std/path": "jsr:@std/path@^1.0.8",
    "@std/assert": "jsr:@std/assert@1",
    "@std/testing": "jsr:@std/testing@^1.0.16"
  },
  "tasks": {
    "dev": "deno run --watch --allow-read --allow-write --allow-env src/cli/jj-merge-tool.ts",
    "start": "deno run --allow-read --allow-write --allow-env src/cli/jj-merge-tool.ts",
    "test": "deno test --allow-read --allow-write src/__tests__/",
    "check": "deno check src/**/*.ts"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "permissions": {
    "default": {
      "env": ["JJ_SPLIT_LOG"],
      "read": ["/tmp"],
      "write": ["/tmp"]
    }
  }
}
